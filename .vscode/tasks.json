{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo +nightly check",
            "command": "cargo",
            "args": [
                "+nightly",
                "check"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cargo +nightly run",
            "command": "cargo",
            "args": [
                "+nightly",
                "run"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}